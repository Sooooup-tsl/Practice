/*元素隐藏显示*/
.hide {
    display: none !important;
}

.show {
    display: block !important;
}

/*文本相关*/

/*不换行加...*/
.t-ellipsis, .t-ellipsis-2{
    overflow: hidden;
    text-overflow: ellipsis;
}
.t-ellipsis {
    white-space: nowrap;
}

.t-ellipsis-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/*文字左*/
.tl {
    text-align: left;
}
/*文字居中*/
.tc {
    text-align: center;
}
/*文字右*/
.tr {
    text-align: right;
}
/*两端对齐*/
.tj {
    text-align: justify;
}

/*浮动*/
/*左浮*/
.pl {
    float: left;
}
/*右浮*/
.pr {
    float: right;
}

/*清除浮动*/
.clear:before,
.clear:after {
    display: table;
    content: ' ';
}
.clear:after {
    clear: both;
}


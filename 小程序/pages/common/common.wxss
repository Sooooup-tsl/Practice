/*flex布局*/
.flex {
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: justify;
    justify-content: space-between;
    display: -webkit-box;
    display: flex;
    box-sizing: border-box;
}


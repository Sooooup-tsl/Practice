/* 航班信息展示弹窗 */
.popup{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.6);
}

.popup-box{
    position: fixed;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    width: 82.5%;
}
.popup-box-content{
    background-color: #fff;
    border-radius: 4px;
    padding: 18px 0 20px;
}

.popup-box-close{
    position: relative;
    width: 28px;
    height: 28px;
    border: 1px solid #949494;
    border-radius: 50%;
    margin: 26px auto 0;
    background-color: rgba(0, 0, 0, 0.15)
}
.popup-box-close::before,.popup-box-close::after{
    position: absolute;
    top: 50%;
    left: 50%;
    content: "";
    width: 1px;
    height: 16px;
    margin: -8px 0 0 -0.5px;
    background-color: #e3e3e3;

}
.popup-box-close::before{
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.popup-box-close::after{
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg)
}
.popup-box-content-top{
    border-bottom: 1px dotted #dddddd;
    padding-bottom: 12px;
    text-align: center;

}
.popup-box-content .flight_info,.popup-box-content .time {
    color: #333;

}
.popup-box-content .flight_info{
    font-size: 12px;
}
.popup-box-content .airplane_info,.popup-box-content .airport{
    color: #999;
    font-size: 10px;
}

.popup-box-content .airplane_info{
    margin-top: 8px;
}
.popup-box-content-bottom .time{
    margin-bottom: 6px;
    font-size: 17px;
}

.popup-box-content-bottom{
    margin-top: 10px;
    text-align: center;
}

.popup-box-content-bottom view{
    display: inline-block;
    text-align: center;
}
.popup-box-content-bottom .long_arrow{
    position: relative;
    width: 26%;
    height: 1px;
    background-color: #ccc;
    background-size: 200px;
    margin: 0 12px 16px;
}

.popup-box-content-bottom .long_arrow::after{
    position: absolute;
    right: 0;
    top: -3px;
    content: "";
    display:inline-block;
    background: url("https://wx.40017.cn/touch/weixin/flight/img/wxapp/wxapp-icons.png?v=2016100601") no-repeat -31px -41px;
    background-size: 200px;
    width: 8px;
    height: 4px;
}

.long_arrow .stop{
    position: absolute;
    top: 50%;
    left: 50%;
    width: 34px;
    height: 16px;
    margin-left: -17px;
    margin-top: -8px;
    border: 1px solid #ccc;
    -webkit-border-radius: 40%/100%;
    border-radius: 40%/100%;
    background-color: #fff;
    font-size: 10px;
    color: #999;
}

/* 重新定义一个分割线，因为base中的分割线 after伪元素被占用*/
.split-top-line::before {
    content: "";
    width: 200%;
    height: 1px;
    position: absolute;
    top: 0;
    left: 0;
    border-bottom: 1px solid #dcdcdc;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    box-sizing: border-box;
}
/* 航班信息 */
.flight{
    padding: 12px 15px;
}

.flight-info{
    margin-bottom: 7px;
    font-size: 14px;
    color: #333;
}

.flight-info::before{
    content: '';
    display: inline-block;
    width: 14px;
    height: 14px;
    background:url("https://wx.40017.cn/touch/weixin/flight/img/wxapp/wxapp-icons.png?v=2016100601") no-repeat -76px -62px;
    background-size: 200px;
    vertical-align: -2px;
    margin-right: 5px;

}

.flight-airport{
    margin-left: 19px;
    color: #999;
}

/* 退改签信息 */

.refundchange{
    padding:  12px 0 12px 15px;
}
.refundchange text{
    color: #ff6633;
}
.refundchange-price{
    margin-top: 4px;
}

.refundprice{
    float: left;
}
.changeprice{
    float: left;
    margin-left: 30rpx;
}
.arrow-icon-price{
  position: relative;
}
.arrow-icon-price::after{
    content:'';
    position: absolute;
    right: 15px;
    top: 12px;
    width: 4px;
    height: 12px;
    background: url("https://wx.40017.cn/touch/weixin/flight/img/wxapp/wxapp-icons.png?v=2016100601") no-repeat -65px -7px;
    background-size: 200px;
}
.moreinfo{
    float: right;
    color: #999;
}
.moreinfo span{
    vertical-align: middle;
}
.moreinfo::before{
    content: "";
    float: right;
    width: 4px;
    height: 12px;
    background:url("https://wx.40017.cn/touch/weixin/flight/img/wxapp/wxapp-icons.png?v=2016100601") no-repeat -65px -7px;
    background-size: 200px;
    vertical-align: middle;
    margin: 3px 0 0 6px;
}

/* 乘机人模块 */
.passenger{
    padding-left: 15px;
    overflow: hidden;
}
.passenger-top{
    height: 44px;
    padding-right: 15px;
    line-height: 44px;
}
.passenger-top strong{
    font-size: 14px;
    color: #000;
}
.passenger-top span{
    margin-left: 12px;
    color: #999;
}

.passenger-top .addpass{
    float: right;
}

.passenger-top .addpass span{
    margin-left: 4px;
    vertical-align: middle;
    color: #09bb07;
}

.passenger-top .addpass::before{
    content: "";
    display: inline-block;
    width: 17px;
    height: 17px;
    background:url("https://wx.40017.cn/touch/weixin/flight/img/wxapp/wxapp-icons.png?v=2016100601") no-repeat -32px -88px;
    background-size: 200px;
    vertical-align: middle;
}

/* 已选择的乘机人信息 */
.passenger-info{
    position: relative;
    height: 55px;
    line-height: 55px;
}
.passenger-info-des{
    float: left;
    height: 55px;
    width: 91.47%;
}
.passenger-info-des strong{
    display: block;
    margin: 12px 0 6px;
    font-size: 14px;
    color: #333;
    line-height: 14px;
}
.passenger-info-des p{
    display: block;
    line-height: 12px;
    color: #666;
}

.passenger-info-icon{
    position: relative;
    float: left;
    width: 26px;
    height: 54px;
    z-index: 10;
}
.passenger-info-icon::before{
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -8px;
    width: 16px;
    height: 16px;
    background-color: #e64340;
    border-radius: 50%;
}
.passenger-info-icon::after{
    content: "";
    position: absolute;
    left: 4px;
    top:50%;
    width: 8px;
    height: 2px;
    margin-top: -1px;
    background-color: #fff;
    -webkit-transition: all .2s ease;
    transition: all .2s ease;
}
.passenger-info-icon_rotate::after{
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
}
.passenger-info-del{
    position: absolute;
    top: 0;
    right:0;
    z-index: 100;
    width: 60px;
    height: 100%;
    background-color: #e64340;
    -webkit-transform: translateX(100%);
    transform: translateX(100%);
    -webkit-transition: all .2s ease;
    transition: all .2s ease;
}
.passenger-info-del:active{
    background-color: #d92a2d;
}

.passenger-info-del::after{
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -10px 0 0 -10px;
    content: "";
    display: inline-block;
    width: 20px;
    height: 20px;
    background:url("https://wx.40017.cn/touch/weixin/flight/img/wxapp/wxapp-icons.png?v=2016100601") no-repeat -45px -109px;
    background-size: 200px;
}

.passenger-info .passenger-info-del_show{
    -webkit-transform: translateX(0);
    transform: translateX(0);
}



}*/
.passger view text:first-child{
    display:inline-block;
    width:60px;
    color:#999;    
}
.passger view text.box-con{
    color:#333;
    font-size:14px;
    position:relative;    
}
.passger view .flight-icon{
    position:absolute;
    right:30px;
    top:32px;
}
.bottom-btn{
    background:#fff;
    height:64px;  
    position:fixed;
    bottom:0;
    left:0;
    right:0;
    text-align:center;
    padding:0 15px;
    box-shadow:0 -2px 8px rgba(0,0,0,.1);
}
.bottom-btn button{
    height:44px;
    margin:10px 0 0;
    background:#06bc02;
    color:#fff;
}
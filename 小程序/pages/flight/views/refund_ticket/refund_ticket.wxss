page{
  background-color: #e8ecf2;
}
.refund-page {
  height: 100%;
  background-color: #e8ecf2;

}
.request-body{
  margin-bottom:20px;
}

.refund-page .title {
  height: 37px;
  line-height: 37px;

  font-size: 14px;
  color: #999999;

  padding: 0 15px;
  box-sizing: border-box;

}
.refund-page .tips{
  color:#f63;
}

.passenger-list {
  font-size: 16px;
  color: #333333;

  background-color: white;
}

.passenger-item {
  height: 44px;
  line-height: 44px;
}

.passenger-name {
  float: left;

  margin-left: 15px;
}

.item-select {
  float: right;
  margin-top:22px;
  margin-right: 15px;

  display: inline-block;
}
.refund-detail {
  background-color: white;
  margin: 6px 0;

  font-size:16px;
  color:#666666;
}

.refund-detail-title {
  height: 44px;
  line-height:44px;

  padding:0 15px;
  font-size:16px;
  color:#666666;
}

.refund-detail-item{
  height: 44px;
  line-height:44px;

  margin:0 15px;

  font-size:14px;
  color:#333333;

}

.total-price {
  height:44px;
  line-height:44px;

  padding:0 15px;
  background-color:white;
}

.total-price1{
  font-size:16px;
  color:#666666;
}

.total-price2{
  font-size:13px;
  color:#ff6633;
}

.total-price3{
  font-size:16px;
  color:#ff6633;
}

.refund-btns {
  margin-top:25px;

  padding:0 15px;
}

.btn {
  height:44px;
  line-height:44px;
  text-align: center;
  border-radius:5px;

  font-size:18px;
  color:#ffffff;

  background-color:#09bb07;
}

.arrow{
  float:right;
  margin-top:28px;
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
  transition:transform .2s ease-in;
  -webkit-transition:-webkit-transform .2s ease-in;
}
.arrow1{
  -webkit-transform: rotate(-90deg);
  transform: rotate(-90deg);
  transition:transform .2s ease-in;
  -webkit-transition:-webkit-transform .2s ease-in;
}

.empty{
  height:6px;
}
.refund-desc{
  font-size:16px;
  color:#333333;

  padding:15px;
  margin-bottom:6px;

  background-color:white;
}

.refund-body{
  padding:15px;

  background-color:white;
}

.flight{
  font-size:16px;
  color:#333333;

  margin-bottom:4px;
}

.order-no,.refund-price{
  font-size:14px;
  color:#999999;

  height:24px;
  line-height:24px;
}

.order-no-text{
  color:#333333;
}

.refund-p{
  color:#ff6633;
}

.success-btns{
  margin-top:25px;

  padding:0 15px;
}

.success-btn{
  height:44px;
  line-height:44px;
  text-align: center;

  font-size:18px;
  border-radius:5px;

  border:1px solid rgba(188,188,188,.5);

  color:#666666;
  background-color:white;
}


